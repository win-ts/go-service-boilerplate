POSTGRES_MAX_LIFETIME=30m

REDIS_TIMEOUT=10s
REDIS_MAX_RETRY=3
REDIS_POOL_SIZE=10

AMQP_QUEUE_NAME=consumer-queue-local-v1
AMQP_CONSUMER_NAME=service-name
AMQP_QUEUE_DURABLE=true
AMQP_QUEUE_AUTO_DELETE=
AMQP_QUEUE_EXCLUSIVE=
AMQP_QUEUE_NO_WAIT=
AMQP_CONSUME_AUTO_ACK=
AMQP_CONSUME_EXCLUSIVE=
AMQP_CONSUME_NO_LOCAL=
