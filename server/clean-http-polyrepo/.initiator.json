{
    "name": "Server Clean Architecture - HTTP (Polyrepo)",
    "description": "Server for HTTP using clean architecture",
    "group": "Server",
    "recommended": true,
    "input": {
        "repo": {
            "from": "$prompt",
            "question": "Please provide the repo name",
            "example": "win-ts/go-monorepo-microservice-template",
            "required": false,
            "default": "win-ts/go-monorepo-microservice-template"
        },
        "service": {
            "from": "$prompt",
            "question": "Please provide the service name",
            "example": "core-auth-server",
            "required": true
        }
    },
    "template": {
        "/win-ts/go-service-boilerplate/server/clean-http-polyrepo/": {
            "from": "$inputs",
            "pattern": "/{{repo}}/{{service}}/",
            "glob": "**/*.go"
        },
        "/win-ts/go-service-boilerplate/pkg/": {
            "from": "$inputs",
            "pattern": "/{{repo}}/pkg/",
            "glob": "**/*.go"
        },
        "/server/clean-http-polyrepo": {
            "from": "$inputs",
            "pattern": "/",
            "glob": "**/docker-compose.dev.yaml"
        },
        "servicename": {
            "from": "$inputs",
            "pattern": "{{service}}"
        }
    }
}
